<?xml version="1.0"?>

<PropertyList>
  <sim>
    <description>Pipistrel Virus</description>
    <author>Jon Ross (ZLSA)</author>
    <status>alpha</status>

    <model>
      <path>Aircraft/pipistrel-virus/model/pipistrel-virus-model.xml</path>
    </model>

    <flight-model>yasim</flight-model>
    <aero>pipistrel-virus</aero>
    <startup>
      <splash-texture>Aircraft/pipistrel-virus/splash.png</splash-texture>
    </startup>

    <flaps>
      <setting>-0.4</setting>
      <setting>0.0</setting>
      <setting>0.5</setting>
      <setting>1.0</setting>
    </flaps>
    
    <virtual-cockpit archive="y">true</virtual-cockpit>
    
    <allow-toggle-cockpit archive="y">true</allow-toggle-cockpit>
    
    <view>
      <name>Pilot view</name>
      <internal archive="y">true</internal>
      <config>
        <x-offset-m archive="y">-0.3</x-offset-m>
        <y-offset-m archive="y">1</y-offset-m>
        <z-offset-m archive="y">10</z-offset-m>
        <pitch-offset-deg type="double">-5.0</pitch-offset-deg>
      </config>
    </view>

    <sound>
      <path archive="y">Aircraft/pipistrel-virus/sound/pipistrel-virus-sound.xml</path>
    </sound>

    <weight n="0">
      <name>Pilot</name>
      <weight-lb>170</weight-lb>
      <max-lb>200</max-lb>
    </weight>

    <weight n="1">
      <name>Coilot</name>
      <weight-lb>0</weight-lb>
      <max-lb>200</max-lb>
    </weight>

    <weight n="2">
      <name>Baggage</name>
      <weight-lb>10</weight-lb>
      <max-lb>30</max-lb>
    </weight>

  </sim>

  <consumables>
    <fuel>
      <tank n="0">
        <name>Left wing</name>
	<level-gal_us>7.9</level-gal_us>
        <selected type="bool">true</selected>
      </tank>
      <tank n="1">
        <name>Right wing</name>
	<level-gal_us>7.9</level-gal_us>
        <selected type="bool">true</selected>
      </tank>
    </fuel>
  </consumables>
  
  <controls>
    <engines>
      <engine n="0">
	<propeller-pitch>0.0</propeller-pitch>
      </engine>
    </engines>
  </controls>

  <nasal>
    <aircraft>
      <file>Aircraft/pipistrel-virus/nasal/pipistrel-virus.nas</file>
    </aircraft>
  </nasal>

</PropertyList>
